<!doctype html>
<html>
<head>
    <title>Personal Job Application Tracker</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Job Application Personal Tracker</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <form action="/applications" method="post">
            <div class="form-group">
                <label>Job Title</label>
                <input type="text" class="form-control" name="jobTitle">
            </div>
            <div class="form-group">
                <label>Starting Salary</label>
                <input type="text" class="form-control" name="salary">
            </div>
            <div class="form-group">
                <label>Years of Experience Required</label>
                <input type="text" class="form-control" name="yoe">
            </div>
            <div class="form-group">
                <label>Contact</label>
                <input type="text" class="form-control" name="contact">
            </div>
            <div class="form-group">
                <label>Hiring Manager</label>
                <input type="text" class="form-control" name="hiringManager">
            </div>
            <div class="form-group">
                <label>Hiring Manager Email</label>
                <input type="text" class="form-control" name="hiringManagerEmail">
            </div>
            <div class="form-group">
                <label>Did Company Contact Me</label>
                <input type="text" class="form-control" name="didContactMe">
            </div>
            <div class="form-group">
                <label>Location</label>
                <input type="text" class="form-control" name="location">
            </div>

    
            <button type="submit" class="btn btn-warning btn-lg">Submit</button>
        </form>

