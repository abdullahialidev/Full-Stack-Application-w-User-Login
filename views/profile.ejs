        <div class="col-sm-6">
          <table class="table table-bordered table-responsive-md table-striped text-center">
            <h1>Let us help get you hired today!</h1>
            </div>
        </div> -->


        <section class="jobDisplay">
            <div class="container d-flex flex-row">
        <% for(let i = 0; i < jobApplications.length; i++) {%>
              <div class="card " >
                <div class="card-body ">
                  <p class="card-title">Job Title: <%= jobApplications[i].jobTitle %> </p>
                  <p class="card-text">Job Salary: <%= jobApplications[i].jobSalary %> </p>
                  <p class="card-text">Years of Experience: <%= jobApplications[i].jobTitle %> </p>
                  <p class="card-text">Contact: <%= jobApplications[i].contanct%></p>
                  <p class="card-text">Hiring Manager: <%= jobApplications[i].hiringManager%></p>
                  <p class="card-text">Hiring Manager Email: <%= jobApplications[i].emailOfHiringManager %></p>
                  <p class="card-text">Did Company Contact Me: <%= jobApplications[i].isContacted%></p>
                  <p class="card-text">Location: <%= jobApplications[i].location %></p>
                  <!-- <span><i class="bi bi-trash"></i></span>
                  <span><i class="bi bi-check-circle"></i></span> -->
                  <a href="/edit-profile/<%=jobApplications[i]._id %>"><button class="btn btn-success">Edit</button></a></td></tr> 
                  <button onclick=deleteById("<%=jobApplications[i]._id %>") class="btn btn-danger">Delete</button></a></td></tr> 

                </div>
              </div>
            </div>
            <% } %>
        </section>


</div>

<script src="main.js"></script>

</body>
</html>