<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="../public/style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Edit Job Application</h1>
    </div>

    <div class="row">
        <%  %>
        
        <form action="/edit-profile/<%=applicationResults._id%>" method="POST">
            <div class="form-group">
                <label>Job Title</label>
                <input type="text" class="form-control" name="jobTitle" value=<%=applicationResults.jobTitle%> >
            </div>
            <div class="form-group">
                <label>Starting Salary</label>
                <input type="text" class="form-control" name="salary" value=<%=applicationResults.jobSalary%>>
            </div>
            <div class="form-group">
                <label>Years of Experience Required</label>
                <input type="text" class="form-control" name="yoe" value=<%=applicationResults.yearsOfExperience%>>
            </div>
            <div class="form-group">
                <label>Contact</label>
                <input type="text" class="form-control" name="contact" value=<%=applicationResults.contanct%>>
            </div>
            <div class="form-group">
                <label>Hiring Manager</label>
                <input type="text" class="form-control" name="hiringManager" value=<%=applicationResults.hiringManager%>>
            </div>
            <div class="form-group">
                <label>Hiring Manager Email</label>
                <input type="text" class="form-control" name="hiringManagerEmail" value=<%=applicationResults.emailOfHiringManager%>>
            </div>
            <div class="form-group">
                <label>Did Company Contact Me</label>
                <input type="text" class="form-control" name="didContactMe" value=<%=applicationResults.isContacted%>>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input type="text" class="form-control" name="location" value=<%=applicationResults.location%>>
            </div>
            <%  %>
    
            <button type="submit" class="btn btn-success btn-lg">Update</button>
        </form>

</div>

<script src="../public/main.js"></script>

</body>
</html>